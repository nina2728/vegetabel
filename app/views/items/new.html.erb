<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('title-logo.png' , size: '185x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">商品の情報を入力</h2>
    <%= form_with model: @item, local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="img-upload">
      <div class="weight-bold-text">
        商品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
   
    <div class="new-items">
      <div class="weight-bold-text">
        商品名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :name, class:"items-text", id:"item-name", placeholder:"例) トウモロコシ(品種:ゴールドラッシュ)（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          商品の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :description, class:"items-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）例）農薬、化学肥料ともに最低限の使用に留めて、自然に優しい農業を目指しています。高原で育てているため、寒暖差が激しく甘さが売りです。" ,rows:"7" ,maxlength:"1000" %>
      </div>
      <div class="items-contents">
        <div class="weight-bold-text">
          内容量
          <span class="indispensable">必須</span>
        </div>
      <%= f.text_area :contents, class:"items-text", id:"item-cont", placeholder:"例) トウモロコシ Lサイズ10本、 トウモロコシ サイズ色々1kg（必須 40文字まで)", maxlength:"40" %>
    </div>
    
    <div class="items-detail">
      <div class="weight-bold-text">商品の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, { include_blanc: "---" }, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          産地
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, { include_blanc: "---" }, {class:"select-box", id:"item-prefecture"}) %>
      </div>
    </div>
    
    <div class="items-detail">
      <div class="weight-bold-text question-text">
        <span>配送について</span>
        <a class="question" href="#">?</a>
      </div>
      <div class="form">
        <div class="weight-bold-text">
          配送料の負担
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:delivery_id, Delivery.all, :id, :name, { include_blanc: "---" }, {class:"select-box", id:"item-shipping-fee-status"}) %>
        <div class="weight-bold-text">
          発送までの日数
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:shipping_id, Shipping.all, :id, :name, { include_blanc: "---" }, {class:"select-box", id:"item-scheduled-delivery"}) %>
      </div>
    </div>
    
    <div class="sell-price">
      <div class="weight-bold-text question-text">
        <span>販売価格<br>(¥1〜9,999,999)</span>
        <a class="question" href="#">?</a>
      </div>
      <div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
        <div class="price-content">
          <span>販売手数料 (5%)</span>
          <span>
            <span id='add-tax-price'></span>円
          </span>
        </div>
        <div class="price-content">
          <span>販売利益</span>
          <span>
            <span id='profit'></span>円
        </div>
        </span>
      </div>
    </div>
    
    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">ベジタベル利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('title-logo.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎VegeTabel,Inc.
    </p>
  </footer>
</div>